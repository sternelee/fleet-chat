{
  "name": "@fleet-chat/extension-manager",
  "version": "1.0.0",
  "description": "Fleet Chat Extension Manager",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-shell": "^2.3.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsup": "^8.4.0",
    "typescript": "^5.9.3"
  },
  "tsup": {
    "entry": ["index.ts"],
    "format": "esm",
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "target": "es2020",
    "treeshake": true
  },
  "publishConfig": {
    "access": "restricted"
  },
  "author": "Fleet Chat",
  "license": "MIT"
}
