{
    "name": "@fleet-chat/api",
    "version": "1.0.0",
    "description": "Fleet Chat Plugin API",
    "main": "index.js",
    "type": "module",
    "exports": {
        ".": "./index.js",
        "./api/*": "./api/*.js",
        "./hooks/*": "./hooks/*.js",
        "./types/*": "./types/*.js",
        "./plugins/*": "./plugins/*.js",
        "./components/*": "./components/*.js",
        "./storage/*": "./storage/*.js",
        "./system/*": "./system/*.js",
        "./renderer/*": "./renderer/*.js",
        "./examples/*": "./examples/*.js"
    },
    "files": [
        "index.ts",
        "api/",
        "hooks/",
        "types/",
        "plugins/",
        "components/",
        "storage/",
        "system/",
        "renderer/",
        "examples/",
        "README.md"
    ],
    "scripts": {
        "build": "tsc --noEmit",
        "dev": "tsc --noEmit --watch",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@raycast/api": "^1.104.1",
        "@tauri-apps/api": "^2.9.1",
        "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
        "@tauri-apps/plugin-fs": "^2.4.4",
        "@tauri-apps/plugin-opener": "^2.5.2",
        "@tauri-apps/plugin-shell": "^2.3.3",
        "lit": "^3.3.1"
    },
    "devDependencies": {
        "@types/node": "^24.5.2",
        "typescript": "^5.9.2"
    },
    "publishConfig": {
        "access": "restricted"
    },
    "author": "Fleet Chat",
    "license": "MIT"
}
