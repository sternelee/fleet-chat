{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "index.ts",
    "api/**/*.ts",
    "components/**/*.ts",
    "hooks/**/*.ts",
    "context/**/*.ts",
    "storage/**/*.ts",
    "types/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
