{
    "name": "@fleet-chat/raycast-api-compat",
    "version": "1.0.0",
    "description": "Raycast compatible API for Fleet Chat plugins",
    "main": "index.ts",
    "type": "module",
    "exports": {
        ".": "./index.ts",
        "./clipboard.js": "./clipboard.ts",
        "./filesystem.js": "./filesystem.ts",
        "./oauth.js": "./oauth.ts",
        "./utils.js": "./utils.ts",
        "./types.js": "./types.ts"
    },
    "files": [
        "index.ts",
        "clipboard.ts",
        "filesystem.ts",
        "oauth.ts",
        "utils.ts",
        "types.ts",
        "README.md"
    ],
    "scripts": {
        "build": "tsc --noEmit",
        "dev": "tsc --noEmit --watch",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@fleet-chat/api": "workspace:*",
        "@tauri-apps/api": "^2.9.1",
        "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
        "@tauri-apps/plugin-fs": "^2.4.4",
        "@tauri-apps/plugin-shell": "^2.3.3"
    },
    "devDependencies": {
        "@raycast/api": "^1.103.6",
        "@types/node": "^24.5.2",
        "typescript": "^5.9.2"
    },
    "publishConfig": {
        "access": "restricted"
    },
    "author": "Fleet Chat",
    "license": "MIT"
}
